<div id="modal" class="modal">

    <div class="modal-content">
        <div class="btn-close">
            <a class="closebtn">
                <i class="fas fa-times" style="margin-right: 0.5rem;"></i>Fermer
            </a>
        </div>

        <form action="addphoto" method="post">
            <label class="label-form">Nom de la photo :</label>
            <div class="champs">
                <input class="input" type="text" name="nameFromFront" placeholder="Nom de la photo" required>
            </div>
            <label class="label-form">Catégorie de la photo :</label>
            <div class="champs">
                <select class="select" name="categorieFromFront" value={option.value}>
                    <option value="">Choisir une categorie</option>
                    <% for (let i=0; i<categorieUnique.length; i++) { %>
                        <option value="<%= categorieUnique[i] %>"><%= categorieUnique[i] %></option>
                    <% } %>
                </select>
            </div>
            <label class="label-form">Ajouter une nouvelle catégorie :</label>
            <div class="champs">
                <input class="input" type="text" name="newCategorieFromFront" placeholder="Nouvelle catégorie"></input>
            </div>
            <label class="label-form">Url de la photo :</label>
            <div class="champs">
                <textarea class="area" name="imgFromFront" placeholder="Url de la photo" required></textarea>
            </div>
            <label class="label-form">Url de la miniature :</label>
            <div class="champs">
                <textarea class="area" name="miniaturesFromFront" placeholder="Url de la miniature" required></textarea>
            </div>
            <div class="champs">
                <button class="btn" type="submit">Valider</button>
            </div>
        </form>
    </div>

</div>
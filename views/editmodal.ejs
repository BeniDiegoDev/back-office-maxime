<div class="modal modaledit">
    <div class="modal-content">
        <div class="btn-close">
            <a class="closebtn">
                <i class="fas fa-times" style="margin-right: 0.5rem;"></i>Fermer
            </a>
        </div>   
        <form action="updatephoto" method="get">
            <!-- ajouter un champs invisible avec l'id -->
            <div class="champs">
                <input hidden class="input" type="text" name="idFromFront" value="<%= galerie.id %>" required>
            </div>
            <div class="champs">
                <input class="input" type="text" name="nameFromFront" value="<%= galerie.name %>" required>
            </div>
            <div class="champs">
                <input class="input" type="text" name="categorieFromFront" value="<%= galerie.categorie %>" required>
            </div>
            <div class="champs">
                <input class="input" type="text" name="imgFromFront" value="<%= galerie.img %>" required>
            </div>
            <div class="champs">
                <input class="input" type="text" name="miniaturesFromFront" value="<%= galerie.miniatures %>" required>
            </div>
            <div class="champs">
                <button class="btn" type="submit">Valider</button>
            </div>
        </form>
    </div>
</div>
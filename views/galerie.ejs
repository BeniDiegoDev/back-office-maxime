<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Back Office du Portfolio de Maxime Turpault</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://kit.fontawesome.com/a41e9403cf.js" crossorigin="anonymous"></script>
</head>

<body>
    <%- include('galeriemodal'); %>    
    <%- include('header'); %>
        <main>
            <div class="galerie">
                <div class="add-galerie">
                    <h1>Gestion de la galerie</h1>
                    <a class="galerie-tool" id="modalBtn">
                        <i class="fas fa-plus" style="margin-right: 0.5rem;"></i>Ajouter une photo à la galerie
                    </a>
                </div>
                <div class="galerie-items">
                    <% for (let i=0; i<galerie.length; i++) { %>
                        <div class="modal modaledit">
                            <div class="modal-content">
                                <div class="btn-close">
                                    <a class="closebtn">
                                        <i class="fas fa-times" style="margin-right: 0.5rem;"></i>Fermer
                                    </a>
                                </div>   
                                <form>
                                    <div class="champs">
                                        <input class="input" type="text" name="nameFromFront" value="<%= galerie[i].name %>" required>
                                    </div>
                                    <div class="champs">
                                        <input class="input" type="text" name="categorieFromFront" value="<%= galerie[i].categorie %>" required>
                                    </div>
                                    <div class="champs">
                                        <input class="input" type="text" name="imgFromFront" value="<%= galerie[i].img %>" required>
                                    </div>
                                    <div class="champs">
                                        <input class="input" type="text" name="miniaturesFromFront" value="<%= galerie[i].miniatures %>" required>
                                    </div>
                                    <div class="champs">
                                        <button class="btn" type="submit">Valider</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="galerie-item">
                            <img class="galerie-image" src="<%= galerie[i].miniatures %>"
                                alt="<%= galerie[i].name %>" />
                            <div class="galerie-infos">
                                <p class="galerie-text">
                                    Catégorie : <%= galerie[i].categorie %>
                                </p>
                                <p class="galerie-text">
                                    Nom : <%= galerie[i].name %>
                                </p>
                            </div>
                            <div class="galerie-tools">
                                <a class="galerie-tool modaleditbtn">
                                    <!-- <%= i %> -->
                                    <i class="fas fa-edit" style="margin-right: 0.5rem;"></i>Editer
                                </a>
                                <a class="galerie-tool" href="/deletephoto?id=<%=galerie[i].id%>">
                                    <i class="fas fa-times" style="margin-right: 0.5rem;"></i>Supprimer
                                </a>
                            </div>
                        </div>
                        <% } %>
                </div>
            </div>
        </main>
        <%- include('footer'); %>
        <script src="../javascripts/modal.js"></script>
</body>

</html>